@model MiCafeteria.Core.Entities.Usuario


@{
    var Rol = ViewData["Id"] as SelectList;
}

<form asp-controller="Usuario" asp-action="Edit" method="post">
    <label asp-for="NombreCompleto" class="form-label"></label>
    <input asp-for="NombreCompleto" class="form-control" />

    <span asp-validation-for="NombreCompleto" class="text-danger"></span>

    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" />

    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password" class="form-label"></label>
    <input asp-for="Password" class="form-control" />

    <span asp-validation-for="Password" class="text-danger"></span>

    <span asp-validation-for="Id" class="text-danger"></span>

    @* todo formulario tiene que tener un submit *@
    <button type="submit" class="btn btn-primary">Editar</button>
</form>