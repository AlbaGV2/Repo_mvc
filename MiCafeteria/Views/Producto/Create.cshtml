@* <p>Soy la vista CREATE</p> *@

@model MiCafeteria.Core.Entities.Producto

@{
    var lista = ViewData["Id"] as SelectList;
}

<h3>Nuevo Producto</h3>

<form asp-controller="Producto" asp-action="Create" method="post">
    <label asp-for="Nombre" class="form-label"></label>
    <input asp-for="Nombre" class="form-control" />

    <span asp-validation-for="Nombre" class="text-danger"></span>

    <label asp-for="Precio" class="form-label"></label>
    <input asp-for="Precio" class="form-control" />

    <span asp-validation-for="Precio" class="text-danger"></span>


    

     <select asp-for="Id" asp-items="lista" class="form-control">
        <option value="">---Selecciona una categoria---</option>
    </select>
    <span asp-validation-for="Id" class="text-danger"></span> 
    

    @* todo formulario tiene que tener un submit *@
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}